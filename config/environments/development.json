{
  "_comment": "Development Environment Configuration - Configuration for cloud-based development environment (AWS)",
  "stacks": {
    "infraStack": "SemiontInfraStack",
    "appStack": "SemiontAppStack"
  },
  "site": {
    "_comment": "Cloud development environment site configuration (example values - MUST BE CUSTOMIZED)",
    "domain": "dev.example.com",
    "adminEmail": "admin@example.com",
    "supportEmail": "support@example.com",
    "oauthAllowedDomains": ["example.com", "gmail.com"]
  },
  "app": {
    "features": {
      "enableAnalytics": false,
      "enableMaintenanceMode": false,
      "enableDebugLogging": true
    },
    "security": {
      "sessionTimeout": 28800,
      "_comment_sessionTimeout": "8 hours for development",
      "maxLoginAttempts": 10,
      "_comment_maxLoginAttempts": "More lenient for development", 
      "corsAllowedOrigins": ["http://localhost:3000", "http://localhost:3001"]
    },
    "performance": {
      "enableCaching": false,
      "_comment_enableCaching": "Disable caching for development",
      "cacheTimeout": 0
    },
    "_comment": "No backend/frontend URLs needed for cloud development config. AWS infrastructure determines URLs automatically from site.domain and sets environment variables in ECS containers."
  },
  "aws": {
    "_comment": "Development AWS configuration (example values)",
    "accountId": "123456789012",
    "certificateArn": "arn:aws:acm:us-east-1:123456789012:certificate/dev-cert-id",
    "hostedZoneId": "ZDEVZONEID123",
    "rootDomain": "example.com",
    "database": {
      "multiAZ": false,
      "_comment_multiAZ": "Single AZ for development",
      "backupRetentionDays": 1
    },
    "ecs": {
      "desiredCount": 1,
      "minCapacity": 1,
      "maxCapacity": 2
    },
    "monitoring": {
      "enableDetailedMonitoring": false,
      "logRetentionDays": 3
    }
  }
}