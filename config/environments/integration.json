{
  "_comment": "Integration Test Environment Configuration - Extends base test configuration with integration-test-specific overrides",
  "_extends": "test",
  "_characteristics": [
    "Real database (PostgreSQL in Testcontainers)",
    "Real API endpoints (HTTP server)", 
    "Real service interactions",
    "End-to-end workflow testing"
  ],
  "deployment": {
    "default": "container"
  },
  "env": {
    "_comment": "Environment variables to set for services",
    "NODE_ENV": "test"
  },
  "services": {
    "backend": {
      "command": "npm start",
      "port": 3001
    },
    "frontend": {
      "command": "npm start",
      "port": 3000
    },
    "database": {
      "deployment": {
        "type": "container"
      },
      "_comment": "Integration tests use Testcontainers for real PostgreSQL",
      "_note": "Testcontainers will override these values dynamically",
      "host": "testcontainer-host",
      "port": 5432,
      "name": "semiont_integration_test",
      "user": "integration_test_user"
    }
  },
  "app": {
    "features": {
      "enableAnalytics": false,
      "_comment_enableAnalytics": "No analytics in tests",
      "enableMaintenanceMode": false,
      "enableDebugLogging": true,
      "_comment_enableDebugLogging": "Helpful for integration debugging"
    },
    "performance": {
      "enableCaching": true,
      "_comment_enableCaching": "Enable caching for more realistic testing",
      "cacheTimeout": 300,
      "_comment_cacheTimeout": "5 minutes"
    },
    "security": {
      "sessionTimeout": 7200,
      "_comment_sessionTimeout": "2 hours for longer integration tests",
      "maxLoginAttempts": 10,
      "_comment_maxLoginAttempts": "Higher limit for test scenarios",
      "corsAllowedOrigins": ["http://localhost:3000"]
    }
  }
}