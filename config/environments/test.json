{
  "_comment": "Base Test Environment Configuration - Common test settings shared between different test types",
  "_usage": "NOT typically used directly. Instead, tests should use: SEMIONT_ENV=unit for unit tests (fast, mocked dependencies) or SEMIONT_ENV=integration for integration tests (real database via Testcontainers)",
  "_note": "Secrets like JWT_SECRET, DATABASE_PASSWORD, and OAuth credentials are set in apps/backend/src/__tests__/setup.ts as environment variables since they shouldn't be committed to git",
  "deployment": {
    "default": "process"
  },
  "site": {
    "domain": "test.example.com",
    "adminEmail": "admin@test.example.com",
    "supportEmail": "support@test.example.com",
    "oauthAllowedDomains": ["test.example.com", "example.org"]
  },
  "app": {
    "features": {
      "enableAnalytics": false,
      "enableMaintenanceMode": false,
      "enableDebugLogging": false
    },
    "security": {
      "sessionTimeout": 3600,
      "_comment_sessionTimeout": "1 hour for tests",
      "maxLoginAttempts": 5,
      "corsAllowedOrigins": ["http://localhost:3000"]
    },
    "performance": {
      "enableCaching": false,
      "_comment_enableCaching": "Disable caching for tests",
      "cacheTimeout": 0
    },
    "_comment": "No backend/frontend URLs needed - services section defines these"
  },
  "services": {
    "backend": {
      "command": "npm start",
      "port": 3001
    },
    "frontend": {
      "command": "npm start",
      "port": 3000
    },
    "database": {
      "host": "localhost",
      "port": 5432,
      "name": "semiont_test",
      "user": "test_user"
    }
  },
  "aws": {
    "_comment": "Test-specific AWS configuration",
    "accountId": "123456789012",
    "certificateArn": "arn:aws:acm:us-east-1:123456789012:certificate/test-cert-id",
    "hostedZoneId": "ZTESTZONEID123",
    "rootDomain": "example.com",
    "database": {
      "multiAZ": false,
      "_comment_multiAZ": "Single AZ for tests",
      "backupRetentionDays": 1
    },
    "ecs": {
      "desiredCount": 1,
      "minCapacity": 1,
      "maxCapacity": 1
    },
    "monitoring": {
      "enableDetailedMonitoring": false,
      "logRetentionDays": 1
    }
  }
}