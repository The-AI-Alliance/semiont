{
  "_comment": "Unit Test Environment Configuration - Configuration for unit tests that mock all external dependencies",
  "_extends": "test",
  "_characteristics": [
    "Fast execution (no external services)",
    "Isolated (no database, no network calls)",
    "Mocked dependencies (Prisma, OAuth, external APIs)",
    "Focused on business logic testing"
  ],
  "deployment": {
    "default": "process"
  },
  "services": {
    "backend": {
      "command": "npm start",
      "port": 3001
    },
    "frontend": {
      "command": "npm start",
      "port": 3000
    },
    "database": {
      "deployment": {
        "type": "mock"
      },
      "_comment_mockMode": "Unit tests mock the database - no real connection needed",
      "host": "mock-host",
      "port": 5432,
      "name": "mock_unit_test_db",
      "user": "mock_user"
    }
  },
  "app": {
    "features": {
      "_comment": "Disable all external features for unit tests",
      "enableAnalytics": false,
      "enableMaintenanceMode": false,
      "enableDebugLogging": false
    },
    "performance": {
      "_comment": "No caching in unit tests",
      "enableCaching": false,
      "cacheTimeout": 0
    },
    "security": {
      "sessionTimeout": 3600,
      "maxLoginAttempts": 5,
      "corsAllowedOrigins": ["http://localhost:3000"]
    }
  }
}