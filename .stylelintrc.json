{
  "extends": ["stylelint-config-standard"],
  "plugins": [
    "stylelint-order",
    "./scripts/stylelint-plugin-theme-selectors.js",
    "./scripts/stylelint-plugin-semiont-invariants.js"
  ],
  "rules": {
    "semiont/theme-selectors": true,
    "semiont/invariants": true,
    "at-rule-no-unknown": true,
    "selector-class-pattern": "^(semiont-[a-z][a-z0-9]*((-|--|__)[a-z0-9]+)*|annotation-[a-z][a-z0-9-]*|red-underline|md-[a-z][a-z0-9-]*|animate-[a-zA-Z-]+|quick-actions-widget|sidebar-navigation[a-z0-9-_]*|cm-[a-zA-Z-]+|sr-only)$",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "function-no-unknown": true,
    "block-no-empty": true,
    "declaration-block-no-duplicate-properties": true,
    "declaration-block-no-shorthand-property-overrides": true,
    "selector-type-no-unknown": true,
    "no-duplicate-selectors": true,
    "no-descending-specificity": null,
    "color-hex-length": "long",
    "color-named": "never",
    "declaration-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "comment-empty-line-before": null,
    "rule-empty-line-before": null,
    "order/properties-alphabetical-order": null,
    "max-nesting-depth": 3,
    "selector-max-compound-selectors": 4,
    "selector-no-qualifying-type": [
      true,
      {
        "ignore": ["attribute"]
      }
    ],
    "declaration-no-important": null,
    "property-no-deprecated": [true, { "ignoreProperties": ["clip"] }],
    "alpha-value-notation": null,
    "color-function-notation": null,
    "color-function-alias-notation": null,
    "import-notation": null,
    "selector-not-notation": null,
    "media-feature-range-notation": null,
    "font-family-name-quotes": null,
    "value-keyword-case": [
      "lower",
      {
        "ignoreKeywords": ["currentColor"]
      }
    ],
    "keyframes-name-pattern": null,
    "declaration-block-single-line-max-declarations": null,
    "no-invalid-position-at-import-rule": null
  },
  "overrides": [
    {
      "files": ["**/*.module.css"],
      "rules": {
        "selector-class-pattern": null,
        "semiont/invariants": null
      }
    },
    {
      "files": ["**/packages/react-ui/**/*.css"],
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": []
          }
        ],
        "function-no-unknown": [
          true,
          {
            "ignoreFunctions": []
          }
        ]
      }
    },
    {
      "files": ["**/apps/**/*.css", "**/apps/**/*.scss"],
      "rules": {
        "semiont/invariants": null,
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": ["tailwind", "layer", "apply", "variants", "responsive", "screen"]
          }
        ],
        "function-no-unknown": [
          true,
          {
            "ignoreFunctions": ["theme"]
          }
        ],
        "selector-class-pattern": null
      }
    }
  ],
  "ignoreFiles": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".next/**",
    "out/**",
    "coverage/**"
  ]
}