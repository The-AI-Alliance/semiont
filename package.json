{
  "name": "semiont",
  "version": "0.1.0",
  "private": true,
  "description": "Semiont - Semantic Knowledge Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:cli": "npm run install:cli -w @semiont/scripts",
    "install:full": "npm run install:full -w @semiont/scripts",
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "frontend:dev": "npm run dev -w semiont-frontend",
    "backend:dev": "npm run dev -w semiont-backend",
    "cdk:deploy": "npm run cdk deploy -w cdk",
    "types:build": "npm run build -w @semiont/api-types",
    "types:watch": "npm run watch -w @semiont/api-types",
    "install:deps": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "typescript": "^5.6.3"
  },
  "license": "Apache-2.0"
}
