{
  "name": "semiont",
  "version": "0.1.0",
  "private": true,
  "description": "Semiont - Semantic Knowledge Platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "demo"
  ],
  "scripts": {
    "install:cli": "npm run build -w @semiont/mcp-server && cd apps/cli && npm run build && npm link",
    "dev": "npm run dev --workspaces",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "node scripts/build-packages.js",
    "build:apps": "npm run build -w semiont-backend && npm run build -w semiont-frontend && npm run build -w semiont-cli",
    "build:all": "npm run build --workspaces",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "frontend:dev": "npm run dev -w semiont-frontend",
    "backend:dev": "npm run dev -w semiont-backend",
    "types:build": "npm run build -w @semiont/sdk -w @semiont/frontend-api -w @semiont/backend-api",
    "types:watch": "npm run watch -w @semiont/sdk -w @semiont/frontend-api -w @semiont/backend-api",
    "install:deps": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "container:build": "node scripts/build-images.js",
    "container:build:backend": "node scripts/build-images.js backend",
    "container:build:frontend": "node scripts/build-images.js frontend",
    "container:build:all": "node scripts/build-images.js all",
    "container:images": "node scripts/container-utils.js list",
    "container:clean": "node scripts/container-utils.js clean",
    "docker:build": "node scripts/build-images.js",
    "docker:build:backend": "node scripts/build-images.js backend",
    "docker:build:frontend": "node scripts/build-images.js frontend",
    "docker:build:all": "node scripts/build-images.js all",
    "docker:images": "node scripts/container-utils.js list",
    "docker:clean": "node scripts/container-utils.js clean",
    "podman:build": "CONTAINER_RUNTIME=podman node scripts/build-images.js",
    "podman:build:backend": "CONTAINER_RUNTIME=podman node scripts/build-images.js backend",
    "podman:build:frontend": "CONTAINER_RUNTIME=podman node scripts/build-images.js frontend",
    "podman:build:all": "CONTAINER_RUNTIME=podman node scripts/build-images.js all",
    "podman:images": "CONTAINER_RUNTIME=podman node scripts/container-utils.js list",
    "podman:clean": "CONTAINER_RUNTIME=podman node scripts/container-utils.js clean"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "typescript": "^5.6.3"
  },
  "license": "Apache-2.0"
}
