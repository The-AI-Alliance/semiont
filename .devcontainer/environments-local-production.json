{
  "name": "local-production",
  "platform": {
    "default": "container"
  },
  "deployment": {
    "imageTagStrategy": "mutable"
  },
  "site": {
    "domain": "localhost:3000"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "logLevel": "info",
  "services": {
    "backend": {
      "platform": {
        "type": "posix"
      },
      "devMode": false,
      "port": 4000,
      "publicURL": "http://localhost:8080",
      "corsOrigin": "http://localhost:8080"
    },
    "frontend": {
      "platform": {
        "type": "posix"
      },
      "devMode": false,
      "port": 3000,
      "publicURL": "http://localhost:8080",
      "siteName": "Semiont"
    },
    "database": {
      "platform": {
        "type": "external"
      },
      "type": "postgres",
      "name": "postgres",
      "host": "localhost",
      "port": 5432,
      "environment": {
        "POSTGRES_DB": "semiont",
        "POSTGRES_USER": "semiont",
        "POSTGRES_PASSWORD": "semiont"
      },
      "description": "PostgreSQL database managed by docker-compose"
    },
    "graph": {
      "platform": {
        "type": "external"
      },
      "type": "neo4j",
      "name": "neo4j",
      "uri": "${NEO4J_URI}",
      "username": "${NEO4J_USERNAME}",
      "password": "${NEO4J_PASSWORD}",
      "database": "${NEO4J_DATABASE}"
    },
    "filesystem": {
      "platform": {
        "type": "posix"
      },
      "path": "./data/uploads",
      "description": "Local filesystem storage for uploads and assets"
    },
    "inference": {
      "platform": {
        "type": "external"
      },
      "type": "anthropic",
      "model": "claude-sonnet-4-5-20250929",
      "maxTokens": 8192,
      "endpoint": "https://api.anthropic.com",
      "apiKey": "${ANTHROPIC_API_KEY}"
    }
  }
}
