    "tags": [
      "Resources",
      "Annotations",
      "Jobs"
    ],
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "parameters": [
      {
        "schema": {
          "type": "string"
        },
        "required": true,
        "name": "id",
        "in": "path"
      }
    ],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/GetEntityTypesResponse.json"
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "Job created successfully",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/AsyncJobResponse.json"
            }
          }
        }
      },
      "401": {
        "description": "Authentication required"
      },
      "404": {
        "description": "Resource not found"
      }
    }
  }
