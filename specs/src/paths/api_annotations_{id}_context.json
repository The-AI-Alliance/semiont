{
  "get": {
    "summary": "Get Annotation Context",
    "description": "Get the text context around an annotation with configurable before/after window",
    "tags": [
      "Annotations",
      "Context"
    ],
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "Annotation ID"
      },
      {
        "name": "resourceId",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "Resource ID containing the annotation"
      },
      {
        "name": "contextBefore",
        "in": "query",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5000,
          "default": 100
        },
        "description": "Number of characters before the selection"
      },
      {
        "name": "contextAfter",
        "in": "query",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5000,
          "default": 100
        },
        "description": "Number of characters after the selection"
      }
    ],
    "responses": {
      "200": {
        "description": "Annotation context",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/AnnotationContextResponse.json"
            }
          }
        }
      },
      "400": {
        "description": "Invalid query parameters"
      },
      "401": {
        "description": "Authentication required"
      },
      "404": {
        "description": "Annotation not found"
      }
    }
  }
}