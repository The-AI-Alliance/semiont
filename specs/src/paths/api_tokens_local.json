{
  "post": {
    "summary": "Local Development Authentication",
    "description": "Authenticate with email only (development mode only)",
    "tags": [
      "Authentication"
    ],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/LocalAuthRequest.json"
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Successful authentication",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/AuthResponse.json"
            }
          }
        }
      },
      "400": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/ErrorResponse.json"
            }
          }
        }
      },
      "403": {
        "description": "Local auth not enabled",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/ErrorResponse.json"
            }
          }
        }
      }
    }
  }
}