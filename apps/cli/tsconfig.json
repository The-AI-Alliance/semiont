{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output Configuration
    "outDir": "./dist",
    "rootDir": "./src",
    
    // CLI-specific overrides
    "module": "ES2022",                         // Use ES modules for the CLI
    "moduleResolution": "bundler",              // Bundler resolution for better compatibility
    "allowImportingTsExtensions": false,        // Don't allow .ts extensions in imports
    
    // JSX Support for Ink (CLI UI)
    "jsx": "react",
    
    // Path Mapping
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}