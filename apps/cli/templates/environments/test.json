{
  "name": "test",
  "platform": {
    "default": "container"
  },
  "env": {
    "NODE_ENV": "test"
  },
  "services": {
    "backend": {
      "platform": {
        "type": "container"
      },
      "image": "semiont-backend:test",
      "port": 4000
    },
    "frontend": {
      "platform": {
        "type": "container"
      },
      "image": "semiont-frontend:test",
      "port": 3000
    },
    "database": {
      "platform": {
        "type": "container"
      },
      "image": "postgres:15-alpine",
      "name": "semiont-test-db",
      "port": 5432,
      "environment": {
        "POSTGRES_DB": "semiont_test",
        "POSTGRES_USER": "semiont",
        "POSTGRES_PASSWORD": "testpass"
      }
    },
    "mcp": {
      "platform": {
        "type": "posix"
      },
      "dependsOn": ["backend"]
    }
  }
}