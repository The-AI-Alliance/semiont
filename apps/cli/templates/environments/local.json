{
  "name": "local",
  "platform": {
    "default": "container"
  },
  "deployment": {
    "imageTagStrategy": "mutable"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "services": {
    "backend": {
      "platform": {
        "type": "posix"
      },
      "command": "npm run dev",
      "port": 4000
    },
    "frontend": {
      "platform": {
        "type": "posix"
      },
      "command": "npm run dev",
      "port": 3000
    },
    "database": {
      "platform": {
        "type": "container"
      },
      "image": "postgres:15-alpine",
      "name": "semiont-local-db",
      "port": 5432,
      "environment": {
        "POSTGRES_DB": "semiont",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "localpass"
      }
    },
    "graph": {
      "platform": {
        "type": "container"
      },
      "type": "janusgraph",
      "name": "janusgraph",
      "port": 8182,
      "host": "localhost",
      "storage": "cassandra",
      "index": "elasticsearch"
    },
    "mcp": {
      "platform": {
        "type": "posix"
      },
      "dependsOn": ["backend"]
    },
    "filesystem": {
      "platform": {
        "type": "posix"
      },
      "path": "./data/uploads",
      "description": "Local filesystem storage for uploads and assets"
    }
  }
}