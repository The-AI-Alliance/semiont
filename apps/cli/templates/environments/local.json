{
  "name": "local",
  "platform": {
    "default": "container"
  },
  "deployment": {
    "imageTagStrategy": "mutable"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "services": {
    "backend": {
      "platform": {
        "type": "process"
      },
      "command": "npm run dev",
      "port": 4000
    },
    "frontend": {
      "platform": {
        "type": "process"
      },
      "command": "npm run dev",
      "port": 3000
    },
    "database": {
      "platform": {
        "type": "container"
      },
      "image": "postgres:15-alpine",
      "name": "semiont-local-db",
      "port": 5432,
      "environment": {
        "POSTGRES_DB": "semiont",
        "POSTGRES_USER": "semiont",
        "POSTGRES_PASSWORD": "localpass"
      }
    },
    "mcp": {
      "platform": {
        "type": "process"
      },
      "dependsOn": ["backend"]
    }
  }
}