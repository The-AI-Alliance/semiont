{
  "name": "semiont-frontend",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:mock": "node scripts/dev-with-mock.js",
    "dev:fast": "next dev --turbo",
    "build": "npm run typecheck && next build",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "start": "next start",
    "test": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --reporter=default --reporter=json --outputFile=test-results.json --exclude='**/admin/**/*.test.tsx' --exclude='**/admin/**/*.test.ts' --exclude='src/app/privacy/__tests__/page.test.tsx' --exclude='src/lib/__tests__/validation.test.ts' --exclude='src/app/api/auth/\\[...nextauth\\]/__tests__/route.test.ts'",
    "test:all": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --reporter=default --reporter=json --outputFile=test-results.json",
    "test:watch": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest",
    "test:coverage": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --coverage",
    "test:ui": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest --ui",
    "test:unit": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --reporter=default --reporter=json --outputFile=test-results.json --testNamePattern=\"^(?!.*integration).*\"",
    "test:integration": "SEMIONT_ENV=integration SEMIONT_ROOT=../.. vitest run --reporter=default --reporter=json --outputFile=test-results.json --testNamePattern=\"integration\"",
    "test:api": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --reporter=default --reporter=json --outputFile=test-results.json src/app/api/auth/\\[...nextauth\\]/__tests__/route.test.ts src/app/api/cookies/consent/__tests__/route.test.ts src/app/api/cookies/export/__tests__/route.test.ts src/app/api/cookies/consent/__tests__/route.basic.test.ts src/app/api/cookies/export/__tests__/route.basic.test.ts",
    "test:security:admin": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --reporter=verbose src/app/admin/__tests__/page.test.tsx src/app/admin/__tests__/auth-wrapper.security.test.tsx src/app/admin/security/__tests__/page.test.tsx src/app/admin/__tests__/layout.test.tsx src/components/admin/__tests__/AdminAuthWrapper.test.tsx src/app/admin/users/__tests__/page.test.tsx",
    "test:security:other": "SEMIONT_ENV=unit SEMIONT_ROOT=../.. vitest run --reporter=verbose src/app/privacy/__tests__/page.test.tsx src/app/api/auth/\\[...nextauth\\]/__tests__/route.test.ts src/lib/__tests__/validation.test.ts",
    "test:security": "npm run test:security:admin && npm run test:security:other",
    "test:typecheck": "vitest typecheck",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "type-check:all": "npm run type-check && npm run type-check:test",
    "analyze": "cross-env ANALYZE=true next build",
    "build:analyze": "npm run analyze",
    "bundle-analyzer": "npx @next/bundle-analyzer .",
    "lighthouse": "lhci autorun",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "perf": "npm run analyze-bundle && npm run lighthouse",
    "perf-monitor": "node scripts/performance-monitor.js",
    "perf-check": "npm run perf-monitor && npm run analyze"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.2",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@semiont/core-types": "*",
    "@tanstack/react-query": "^4.36.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "ink": "^5.2.1",
    "ink-table": "^3.0.0",
    "next": "15.5.4",
    "next-auth": "^4.24.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "remark-wiki-link": "^2.0.1",
    "sharp": "^0.34.3",
    "typescript": "^5",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^14.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10",
    "cross-env": "^7.0.3",
    "fast-check": "^4.3.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "undici": "^7.13.0",
    "use-sync-external-store": "^1.5.0",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "msw": {
    "workerDirectory": [
      "apps/frontend/public"
    ]
  }
}
