{
  "name": "semiont-backend",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput & node --watch dist/index.js",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "pretest": "npm run build --workspace=@semiont/api-types && npm run build --workspace=@semiont/config",
    "test": "SEMIONT_ENV=unit vitest run",
    "test:watch": "SEMIONT_ENV=unit vitest",
    "test:coverage": "SEMIONT_ENV=unit vitest run --coverage",
    "test:ui": "SEMIONT_ENV=unit vitest --ui",
    "test:unit": "SEMIONT_ENV=unit vitest run --testNamePattern=\"^(?!.*integration).*\"",
    "test:integration": "SEMIONT_ENV=integration vitest run --config=vitest.integration.config.mjs",
    "test:api": "SEMIONT_ENV=unit vitest run src/__tests__/api/admin-endpoints.test.ts src/__tests__/api/documentation.test.ts src/__tests__/middleware/auth.test.ts",
    "test:security": "SEMIONT_ENV=unit vitest run --reporter=verbose --testNamePattern=security",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.10",
    "@prisma/client": "^6.13.0",
    "@semiont/api-types": "*",
    "@semiont/config": "*",
    "dotenv": "^16.3.1",
    "hono": "^4.8.10",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@testcontainers/postgresql": "^11.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "msw": "^2.10.4",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
