{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // MEMORY OPTIMIZATIONS ONLY - NO REDUCTION IN TYPE SAFETY

    // Don't generate output files for typecheck-only operation
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    // Disable incremental compilation in CI (can leak memory)
    "incremental": false,

    // Skip checking node_modules .d.ts files (memory optimization)
    "skipLibCheck": true
  }
}