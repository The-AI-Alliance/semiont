{
  "name": "@semiont/react-ui",
  "version": "0.2.30",
  "description": "React components and hooks for Semiont",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./test-utils": {
      "types": "./dist/test-utils.d.mts",
      "import": "./dist/test-utils.mjs"
    },
    "./styles": "./src/styles/index.css",
    "./styles/index.css": "./src/styles/index.css",
    "./styles/variables.css": "./src/styles/variables.css",
    "./tailwind": "./src/integrations/tailwind-plugin.js",
    "./integrations/css-modules": {
      "types": "./dist/integrations/css-modules-helper.d.mts",
      "import": "./dist/integrations/css-modules-helper.mjs"
    },
    "./integrations/styled-components": {
      "types": "./dist/integrations/styled-components-theme.d.mts",
      "import": "./dist/integrations/styled-components-theme.mjs"
    },
    "./translations/*": "./translations/*.json"
  },
  "files": [
    "dist",
    "src/styles",
    "src/integrations",
    "src/examples",
    "translations",
    "public",
    "README.md"
  ],
  "scripts": {
    "build": "npm run typecheck && tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run -t \"Accessibility\"",
    "test:a11y:watch": "vitest -t \"Accessibility\""
  },
  "peerDependencies": {
    "@semiont/api-client": "*",
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^3.0.0",
    "axe-core": "^4.11.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "The AI Alliance",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/The-AI-Alliance/semiont.git",
    "directory": "packages/react-ui"
  }
}
