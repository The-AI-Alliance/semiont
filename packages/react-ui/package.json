{
  "name": "@semiont/react-ui",
  "version": "0.2.28",
  "private": true,
  "description": "React components and hooks for Semiont",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./test-utils": {
      "types": "./dist/test-utils.d.mts",
      "import": "./dist/test-utils.mjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run typecheck && tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@tanstack/react-query": "^5.0.0",
    "@semiont/api-client": "*"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@vitest/coverage-v8": "^3.0.0",
    "jsdom": "^23.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vitest": "^3.0.0"
  }
}
