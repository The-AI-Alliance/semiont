        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "command": { "type": "string" },
        "image": { "type": "string" },
        "port": { "type": "integer" },
        "dependsOn": { "type": "array", "items": { "type": "string" } },
        "timeout": { "type": "integer" },
        "wait": { "type": "integer" },
