{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://semiont.org/schemas/config.json",
  "definitions": {
    "PlatformType": {
      "type": "string",
      "enum": ["posix", "container", "aws", "external"]
    },
    "ServicePlatformConfig": {
      "type": "object",
      "properties": {
        "type": { "$ref": "#/definitions/PlatformType" }
      },
      "required": ["type"]
    },
    "BackendServiceConfig": {
      "type": "object",
      "properties": {
        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "command": { "type": "string" },
        "port": { "type": "integer" },
        "publicURL": { "type": "string" },
        "corsOrigin": { "type": "string" }
      },
      "required": ["platform", "port", "publicURL", "corsOrigin"],
      "additionalProperties": true
    },
    "FrontendServiceConfig": {
      "type": "object",
      "properties": {
        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "command": { "type": "string" },
        "port": { "type": "integer" },
        "url": { "type": "string" },
        "siteName": { "type": "string" }
      },
      "required": ["platform", "port", "url"],
      "additionalProperties": true
    },
    "DatabaseServiceConfig": {
      "type": "object",
      "properties": {
        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "type": { "type": "string" },
        "name": { "type": "string" },
        "host": { "type": "string" },
        "port": { "type": "integer" },
        "environment": { "type": "object", "additionalProperties": { "type": "string" } },
        "description": { "type": "string" }
      },
      "required": ["platform", "type", "host", "port"],
      "additionalProperties": true
    },
    "GraphDatabaseType": {
      "type": "string",
      "enum": ["neo4j", "janusgraph", "neptune", "memory"]
    },
    "GraphServiceConfig": {
      "type": "object",
      "properties": {
        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "type": { "$ref": "#/definitions/GraphDatabaseType" },
        "name": { "type": "string" },
        "uri": { "type": "string" },
        "username": { "type": "string" },
        "password": { "type": "string" },
        "database": { "type": "string" },
        "host": { "type": "string" },
        "port": { "type": "integer" },
        "storage": { "type": "string" },
        "index": { "type": "string" },
        "endpoint": { "type": "string" },
        "region": { "type": "string" }
      },
      "required": ["platform", "type", "uri", "username", "password", "database"],
      "additionalProperties": true
    },
    "FilesystemServiceConfig": {
      "type": "object",
      "properties": {
        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "path": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["platform", "path"],
      "additionalProperties": true
    },
    "InferenceServiceConfig": {
      "type": "object",
      "properties": {
        "platform": { "$ref": "#/definitions/ServicePlatformConfig" },
        "type": { "type": "string" },
        "model": { "type": "string" },
        "maxTokens": { "type": "integer" },
        "endpoint": { "type": "string" },
        "baseURL": { "type": "string" },
        "apiKey": { "type": "string" }
      },
      "required": ["platform", "type", "apiKey"],
      "additionalProperties": true
    },
    "ServicesConfig": {
      "type": "object",
      "properties": {
        "backend": { "$ref": "#/definitions/BackendServiceConfig" },
        "frontend": { "$ref": "#/definitions/FrontendServiceConfig" },
        "database": { "$ref": "#/definitions/DatabaseServiceConfig" },
        "graph": { "$ref": "#/definitions/GraphServiceConfig" },
        "filesystem": { "$ref": "#/definitions/FilesystemServiceConfig" },
        "inference": { "$ref": "#/definitions/InferenceServiceConfig" }
      },
      "additionalProperties": true
    },
    "SiteConfig": {
      "type": "object",
      "properties": {
        "siteName": {
          "type": "string",
          "minLength": 1,
          "description": "Display name for the site"
        },
        "domain": {
          "type": "string",
          "minLength": 1,
          "description": "Primary domain for the site"
        },
        "adminEmail": {
          "type": "string",
          "format": "email",
          "description": "Administrator email address"
        },
        "supportEmail": {
          "type": "string",
          "format": "email",
          "description": "Support email address (optional)"
        },
        "oauthAllowedDomains": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Email domains allowed for OAuth authentication"
        }
      },
      "required": ["siteName", "domain", "adminEmail", "oauthAllowedDomains"],
      "additionalProperties": false
    },
    "AppConfig": {
      "type": "object",
      "properties": {
        "features": {
          "type": "object",
          "properties": {
            "enableAnalytics": { "type": "boolean" },
            "enableMaintenanceMode": { "type": "boolean" },
            "enableDebugLogging": { "type": "boolean" }
          },
          "additionalProperties": false
        },
        "security": {
          "type": "object",
          "properties": {
            "sessionTimeout": {
              "type": "integer",
              "minimum": 60,
              "description": "Session timeout in seconds"
            },
            "maxLoginAttempts": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum failed login attempts before lockout"
            },
            "corsAllowedOrigins": {
              "type": "array",
              "items": { "type": "string" }
            },
            "enableLocalAuth": {
              "type": "boolean",
              "description": "Enable local username/password authentication"
            },
            "jwtSecret": {
              "type": "string",
              "minLength": 32,
              "description": "JWT signing secret (base64 encoded, 32+ bytes)"
            }
          },
          "additionalProperties": false
        },
        "performance": {
          "type": "object",
          "properties": {
            "enableCaching": { "type": "boolean" },
            "cacheTimeout": {
              "type": "integer",
              "minimum": 0,
              "description": "Cache timeout in seconds"
            },
            "maxRequestSize": {
              "type": "string",
              "pattern": "^[0-9]+(kb|mb|gb)$",
              "description": "Maximum request size (e.g., '10mb')"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "EnvironmentConfig": {
      "type": "object",
      "properties": {
        "_comment": {
          "type": "string",
          "description": "Optional comment for documentation"
        },
        "_metadata": {
          "type": "object",
          "properties": {
            "environment": { "type": "string" },
            "projectRoot": { "type": "string" }
          },
          "required": ["environment", "projectRoot"]
        },
        "platform": {
          "type": "object",
          "properties": {
            "default": { "$ref": "#/definitions/PlatformType" }
          }
        },
        "services": {
          "$ref": "#/definitions/ServicesConfig"
        },
        "site": {
          "$ref": "#/definitions/SiteConfig"
        },
        "app": {
          "$ref": "#/definitions/AppConfig"
        },
        "env": {
          "type": "object",
          "properties": {
            "NODE_ENV": {
              "type": "string",
              "enum": ["development", "production", "test"]
            }
          },
          "additionalProperties": true
        },
        "deployment": {
          "type": "object",
          "properties": {
            "imageTagStrategy": {
              "type": "string",
              "enum": ["mutable", "immutable", "git-hash"]
            }
          }
        }
      },
      "required": ["services", "site"],
      "additionalProperties": true
    },
    "SemiontConfig": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Config file version (semver)"
        },
        "project": {
          "type": "string",
          "minLength": 1,
          "description": "Project name"
        },
        "site": {
          "$ref": "#/definitions/SiteConfig"
        },
        "app": {
          "$ref": "#/definitions/AppConfig"
        },
        "services": {
          "$ref": "#/definitions/ServicesConfig"
        }
      },
      "required": ["version", "project", "site"],
      "additionalProperties": true
    }
  }
}
