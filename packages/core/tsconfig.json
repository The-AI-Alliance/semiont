{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "incremental": false
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "dist", "scripts"]
}