{
  "name": "@semiont/core",
  "version": "0.2.34",
  "description": "Core domain types for Semiont - Document, Annotation, and Graph models",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=20.18.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/The-AI-Alliance/semiont.git",
    "directory": "packages/core"
  },
  "scripts": {
    "bundle-spec": "cd ../.. && npm run openapi:bundle",
    "copy-spec": "cp ../../specs/openapi.json openapi.json",
    "generate:openapi": "npm run bundle-spec && npm run copy-spec && openapi-typescript openapi.json -o src/types.ts",
    "generate:types": "tsx scripts/generate-types.ts",
    "prebuild": "npm run generate:openapi && npm run generate:types",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && tsup",
    "watch": "tsup --watch",
    "clean": "rm -rf dist *.tsbuildinfo src/types.ts openapi.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "types",
    "domain",
    "document",
    "selection",
    "graph",
    "semiont"
  ],
  "author": "Semiont Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.0",
    "json-schema-to-typescript": "^15.0.2",
    "openapi-typescript": "^7.10.1",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "rxjs": "^6.6.7"
  }
}
