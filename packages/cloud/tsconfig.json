{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output Configuration
    "outDir": "./dist",
    "rootDir": ".",
    
    // Module configuration for cloud/CDK package
    "module": "commonjs",                       // CommonJS for Node.js compatibility
    "moduleResolution": "node",                 // Node.js module resolution
    
    // CDK/Cloud specific settings
    "experimentalDecorators": true,             // Enable decorators if needed for CDK
    "emitDecoratorMetadata": true,             // Emit decorator metadata
    
    // Override strict settings that conflict with CDK types
    "exactOptionalPropertyTypes": false        // CDK types aren't compatible with this
  },
  "include": [
    "index.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cdk.out",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}