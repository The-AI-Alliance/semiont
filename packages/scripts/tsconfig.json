{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output Configuration
    "outDir": "./dist",
    "rootDir": ".",
    
    // Module configuration for scripts/tools
    "module": "ES2022",                         // ES modules for modern Node.js
    "moduleResolution": "node",                 // Node.js module resolution
    
    // Scripts specific
    "allowJs": true,                           // Allow JavaScript files
    "checkJs": false                           // Don't check JS files
  },
  "include": [
    "**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}