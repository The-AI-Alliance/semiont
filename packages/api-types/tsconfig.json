{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Output Configuration
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Module configuration for a shared types package
    "module": "commonjs",                       // CommonJS for maximum compatibility
    "moduleResolution": "node",                 // Node.js module resolution
    
    // Types package specific
    "declaration": true,                        // Always generate declarations
    "declarationMap": true,                     // Generate declaration sourcemaps
    "emitDeclarationOnly": false,               // Also emit JS for any runtime code
    
    // Strictness (inherited from root, but can be more strict)
    "noPropertyAccessFromIndexSignature": true  // Extra strictness for type definitions
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}